<div id="dynamic-table-wrapper">
  <div class="dt-inner">
    <div class="dt-top">
      <input id="dt-search" class="dt-search" type="text" placeholder="Ara..." autocomplete="off" />
    </div>
    <div id="hot-container"></div>
    <div id="dt-horizontal-scroll" class="dt-horizontal-scroll"><div id="dt-horizontal-scroll-inner" class="dt-horizontal-scroll-inner"></div></div>
    <div class="dt-footer">
      <span id="selection-count">Öğe seçilmedi</span>
    </div>
  </div>
