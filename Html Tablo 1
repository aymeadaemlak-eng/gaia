          <button id="dt-filter-ok" type="button" class="dt-filter-btn dt-filter-btn--primary">OK</button>
        </div>
      </div>
    </div>
    <div class="dt-footer"></div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/handsontable@latest/dist/handsontable.full.min.js"></script>
<script>
(function() {
  'use strict';

  const DEBUG = true;
  const log = (...args) => { if (DEBUG) console.log('[DynamicTable]', ...args); };

  const state = {
    hot: null,
    rawRows: [],
    columns: [],
    displayRows: [],
    selection: new Set(),
    selectionOrder: [],
    isSearchOpen: false,
    activeHeaderColumn: null,
    columnMenuOpenedAt: 0,
    filterConfigs: {},
    filterDraft: null,
    submenuCloseTimer: null
  };

  const els = {
    wrapper: document.getElementById('dynamic-table-wrapper'),
    container: document.getElementById('hot-container'),
    search: document.getElementById('dt-search'),
    searchWrap: document.getElementById('dt-search-wrap'),
    searchToggleButton: document.getElementById('dt-btn-search'),
    sortButton: document.getElementById('dt-btn-sort'),
    deleteButton: document.getElementById('dt-btn-delete'),
    importButton: document.getElementById('dt-btn-import'),
    downloadButton: document.getElementById('dt-btn-download'),
    newButton: document.getElementById('dt-btn-new'),
    columnMenu: document.getElementById('dt-column-menu'),
    columnMenuTitle: document.getElementById('dt-column-menu-title'),
    columnMenuAddButton: document.getElementById('dt-column-menu-add'),
    columnMenuManageButton: document.getElementById('dt-column-menu-manage'),
    columnMenuFilterButton: document.getElementById('dt-column-menu-filter'),
    columnMenuSortButton: document.getElementById('dt-column-menu-sort'),
    sortPanel: document.getElementById('dt-sort-panel'),
    sortAscButton: document.getElementById('dt-sort-asc'),
    sortDescButton: document.getElementById('dt-sort-desc'),
    filterPanel: document.getElementById('dt-filter-panel'),
    filterConditionSelect: document.getElementById('dt-filter-condition'),
    filterConditionValueInput: document.getElementById('dt-filter-condition-value'),
    filterOperatorRow: document.getElementById('dt-filter-operator-row'),
    filterOperatorAnd: document.getElementById('dt-filter-op-and'),
    filterOperatorOr: document.getElementById('dt-filter-op-or'),
    filterConditionSelect2: document.getElementById('dt-filter-condition-2'),
    filterConditionValueInput2: document.getElementById('dt-filter-condition-value-2'),
    filterSearchInput: document.getElementById('dt-filter-search'),
    filterValuesWrap: document.getElementById('dt-filter-values'),
    filterSelectAllButton: document.getElementById('dt-filter-select-all'),
    filterClearButton: document.getElementById('dt-filter-clear'),
    filterCancelButton: document.getElementById('dt-filter-cancel'),
    filterOkButton: document.getElementById('dt-filter-ok'),
    totals: document.getElementById('footer-totals')
  };

  const UNIQUE_KEYS = ['uniqueid', 'unique_id', 'unique', 'id', 'Id', 'ID'];
  const NUMERIC_HINTS = ['tutar', 'amount', 'toplam', 'Ã¶dem', 'bakiye'];
  const UI_ACTIONS_COL_ID = '__dt_actions__';
  const BLANK_VALUE_TOKEN = '__DT_BLANK__';
  const COLUMN_WIDTH_MULTIPLIER = 1.25;
  const HANDSONTABLE_SCRIPT_SOURCES = [
    'https://cdn.jsdelivr.net/npm/handsontable@latest/dist/handsontable.full.min.js',
    'https://unpkg.com/handsontable@latest/dist/handsontable.full.min.js'
  ];

  let handsontableReadyPromise = null;

  function loadScriptOnce(src) {
    return new Promise((resolve, reject) => {
      const existing = document.querySelector(`script[data-dt-handsontable-src="${src}"]`);
      if (existing) {
        if (existing.dataset.loaded === 'true') {
          resolve();
          return;
        }
        existing.addEventListener('load', () => resolve(), { once: true });
        existing.addEventListener('error', () => reject(new Error(`Script load failed: ${src}`)), { once: true });
        return;
      }

      const script = document.createElement('script');
      script.src = src;
      script.async = true;
      script.defer = true;
      script.dataset.dtHandsontableSrc = src;
      script.addEventListener('load', () => {
        script.dataset.loaded = 'true';
        resolve();
      }, { once: true });
      script.addEventListener('error', () => reject(new Error(`Script load failed: ${src}`)), { once: true });
      document.head.appendChild(script);
    });
  }

  function ensureHandsontableReady() {
    if (typeof window.Handsontable === 'function') {
      return Promise.resolve();
    }
    if (handsontableReadyPromise) {
      return handsontableReadyPromise;
    }

    handsontableReadyPromise = (async () => {
      let lastError = null;
      for (const src of HANDSONTABLE_SCRIPT_SOURCES) {
        try {
          await loadScriptOnce(src);
          if (typeof window.Handsontable === 'function') {
            return;
          }
        } catch (error) {
          lastError = error;
          console.warn('[DynamicTable] Handsontable yÃ¼klenemedi, alternatif kaynak deneniyor.', { src, error });
        }
      }
      throw lastError || new Error('Handsontable yÃ¼klenemedi.');
    })();

    return handsontableReadyPromise;
  }

  function getUiActionsColumn() {
    return {
      id: UI_ACTIONS_COL_ID,
      header: '',
      width: 92,
      readOnly: true,
      type: 'text',
      sourceKeys: [UI_ACTIONS_COL_ID],
      __uiOnly: true
    };
  }

  function sanitizeColumns(columns) {
    if (!Array.isArray(columns)) return [];
    const seen = new Set();
    const sanitized = [];

    columns.forEach((col, index) => {
      if ((col?.type || '').toLowerCase() === 'hidden') {
        return;
      }
      const id = (col?.id || col?.data || col?.field || col?.key || col?.header || col?.title || `column_${index + 1}`).toString();
      if (seen.has(id)) return;
      seen.add(id);
      sanitized.push({
        id,
        header: col?.header || col?.title || col?.label || id,
        width: Math.round((col?.columnWidth || col?.width || Math.min(Math.max((col?.header || id).length * 9 + 60, 140), 420)) * COLUMN_WIDTH_MULTIPLIER),
        readOnly: col?.readOnly !== false,
        type: (col?.type || 'text').toLowerCase(),
        sourceKeys: [id, col?.data, col?.field, col?.key, col?.header, col?.title, col?.label, col?.name].filter(Boolean)
      });
    });

    return sanitized;
  }

  function normalizeRow(row, index) {
    if (row && typeof row === 'object' && !Array.isArray(row)) {
      return Object.assign({ __sourceIndex: index }, row);
    }
    return { __sourceIndex: index, value: row };
  }

  function pickValue(row, column) {
    if (!row || typeof row !== 'object') return column.default || '';
    for (const key of column.sourceKeys) {
      if (row[key] !== undefined && row[key] !== null && row[key] !== '') {
        return row[key];
      }
    }
    const normalizedRowKeys = Object.keys(row).map(key => ({
      original: key,
      normalized: key.toString().trim().toLocaleLowerCase('tr-TR')
    }));
    const normalizedCandidates = column.sourceKeys.map(key => key.toString().trim().toLocaleLowerCase('tr-TR'));
    for (const candidate of normalizedRowKeys) {
      if (normalizedCandidates.includes(candidate.normalized)) {
        const value = row[candidate.original];
        if (value !== undefined && value !== null && value !== '') {
          return value;
        }
      }
    }
    return column.default || '';
  }

  function isBooleanValue(value) {
    return typeof value === 'boolean' || value === 'true' || value === 'false' || value === 1 || value === 0 || value === '1' || value === '0';
  }

  function coerceBoolean(value) {
    if (value === true || value === 'true' || value === 1 || value === '1') return true;
    return false;
  }

  function looksLikeImageUrl(value) {
    if (typeof value !== 'string') return false;
    const trimmed = value.trim();
    if (!/^https?:\/\//i.test(trimmed)) return false;
    return /\.(png|jpe?g|gif|webp|bmp|svg)$/i.test(trimmed);
  }

  function splitImageList(value) {
    if (typeof value !== 'string') return [];
    return value
      .split(/[;,]/)
      .map(part => part.trim())
      .filter(part => part && looksLikeImageUrl(part));
  }

  function looksLikeDateString(value) {
    if (typeof value !== 'string') return false;
    const trimmed = value.trim();
    if (!trimmed) return false;
    // ISO or yyyy-mm-dd or with time components; avoid pure numbers to prevent number columns from being parsed.
    if (/^\d{4}-\d{1,2}-\d{1,2}(?:[ T]\d{1,2}:\d{1,2}(?::\d{1,2})?)?/.test(trimmed)) return true;
    if (trimmed.includes('T') && /\d/.test(trimmed)) return true;
    return false;
  }

  function formatDateValue(value) {
    if (value === null || value === undefined || value === '') return '';

    let date;
    const str = typeof value === 'string' ? value.trim() : value;

    if (typeof value === 'number') {
      const num = value > 1e12 ? value : value * 1000;
      date = new Date(num);
    } else if (typeof str === 'string' && /^\d{10,13}$/.test(str)) {
      const num = str.length === 13 ? Number(str) : Number(str) * 1000;
      date = new Date(num);
    } else {
      date = new Date(value);
    }

    if (Number.isNaN(date.getTime())) return String(value);

    const hasTime =
      date.getHours() !== 0 ||
      date.getMinutes() !== 0 ||
      date.getSeconds() !== 0;

    try {
      return new Intl.DateTimeFormat('tr-TR', {
        year: 'numeric',
        month: '2-digit',
        day: '2-digit',
        ...(hasTime ? { hour: '2-digit', minute: '2-digit' } : {})
      }).format(date);
    } catch (err) {
      return String(value);
    }
  }

  function buildDisplayRows(rows) {
    return rows.map((row, idx) => {
      const display = { __sourceIndex: row.__sourceIndex ?? idx };
      state.columns.forEach(col => {
        display[col.id] = pickValue(row, col);
      });
      return display;
    });
  }

  function isNumericColumn(column) {
    if (!column) return false;
    if (column.type === 'numeric' || column.type === 'number') return true;
    const header = column.header.toLocaleLowerCase('tr-TR');
    return NUMERIC_HINTS.some(hint => header.includes(hint));
  }

  function getSafeRenderer(col) {
    const baseText = Handsontable?.renderers?.TextRenderer;
    const checkboxRenderer = Handsontable?.renderers?.checkboxRenderer;

    if (!baseText) return null;

    const type = (col?.type || '').toLowerCase();
    const numberFormatter = new Intl.NumberFormat('tr-TR');

    const renderBoolean = function(instance, td, row, colIndex, prop, value) {
      const checked = coerceBoolean(value);
      Handsontable.dom.empty(td);
      td.style.textAlign = 'center';
      const mark = document.createElement('span');
      mark.className = 'dt-check';
      mark.textContent = checked ? 'âœ“' : '';
      td.appendChild(mark);
    };

    const renderNumeric = function(instance, td, row, colIndex, prop, value) {
      baseText.apply(this, arguments);
      if (value === null || value === undefined || value === '') return;
      const num = Number(value);
      if (!Number.isNaN(num)) {
        td.textContent = numberFormatter.format(num);
      }
    };

    const renderDate = function(instance, td, row, colIndex, prop, value) {
      baseText.apply(this, arguments);
      td.textContent = formatDateValue(value);
      td.style.textAlign = 'left';
    };

    const renderImage = function(instance, td, row, colIndex, prop, value) {
      Handsontable.dom.empty(td);
      const urls = splitImageList(value);
      if (!urls.length) {
        td.textContent = value || '';
        return;
      }
      td.style.whiteSpace = 'normal';
      const list = document.createElement('div');
      list.style.display = 'flex';
      list.style.flexDirection = 'column';
      list.style.gap = '4px';
      urls.forEach(url => {
        const link = document.createElement('a');
        link.href = url;
        link.target = '_blank';
        link.rel = 'noopener';
        link.textContent = url.split('/').pop() || 'dosya';
        link.style.wordBreak = 'break-all';
        list.appendChild(link);
      });
      td.appendChild(list);
    };

    const renderAuto = function(instance, td, row, colIndex, prop, value) {
      const rawValue = value;

      if (isBooleanValue(rawValue) && checkboxRenderer) {
        return checkboxRenderer.apply(this, [instance, td, row, colIndex, prop, coerceBoolean(rawValue)]);
      }

      if (looksLikeImageUrl(rawValue)) {
        return renderImage(instance, td, row, colIndex, prop, rawValue);
      }

       if (looksLikeDateString(rawValue)) {
        baseText.apply(this, arguments);
        td.textContent = formatDateValue(rawValue);
        td.style.textAlign = 'left';
        return;
      }

      return baseText.apply(this, arguments);
    };

    if (type === 'boolean' || type === 'checkbox') return renderBoolean;
    if (type === 'numeric' || type === 'number') return renderNumeric;
    if (type === 'date') return renderDate;
    if (type === 'image') return renderImage;

    return renderAuto;
  }

  function updateFooter() {
    if (!els.totals || !state.hot) return;
    const rows = state.hot.getSourceData();
    if (!rows || rows.length === 0) {
      els.totals.innerHTML = '';
      return;
    }

    const summaries = [];
    state.columns.filter(isNumericColumn).forEach(col => {
      let sum = 0;
      let count = 0;
      rows.forEach(row => {
        const value = row[col.id];
        const num = parseFloat(String(value).replace(/[^0-9.-]/g, ''));
        if (!isNaN(num)) {
          sum += num;
          count += 1;
        }
      });
      if (count > 0) {
        summaries.push(`${col.header}: ${sum.toLocaleString('tr-TR')}`);
      }
    });
    els.totals.innerHTML = summaries.map(text => `<span>${text}</span>`).join('');
  }

  function updateSelectionText() {
    if (!els.selectionText) return;
    const count = state.selection.size;
    els.selectionText.textContent = count === 0 ? 'Ã–ÄŸe seÃ§ilmedi' : `${count} Ã¶ÄŸe seÃ§ili`;
  }


  function updateDeleteButtonVisibility() {
    if (!els.deleteButton) return;
    const hasSelection = state.selection.size > 0;
    els.deleteButton.classList.toggle('dt-hidden', !hasSelection);
  }

  function handleSelection() {
    if (!state.hot) return;
    const ranges = state.hot.getSelectedRange();
    state.selection.clear();
    state.selectionOrder = [];

    if (ranges && ranges.length) {
      ranges.forEach(range => {
        const start = Math.max(range.from.row, 0);
        const end = Math.max(range.to.row, 0);
        for (let rowIndex = Math.min(start, end); rowIndex <= Math.max(start, end); rowIndex += 1) {
          const sourceIndex = state.displayRows[rowIndex]?.__sourceIndex;
          if (sourceIndex === undefined) continue;
          if (!state.selection.has(sourceIndex)) {
            state.selection.add(sourceIndex);
            state.selectionOrder.push(sourceIndex);
          }
        }
      });
    }

    updateSelectionText();
    updateDeleteButtonVisibility();
    if (typeof window.bubble_fn_hasSelection === 'function') {
      window.bubble_fn_hasSelection(state.selection.size > 0);
    }
    publishSelectedUniqueIds();
  }

  function prioritizeSelection(sourceIndex) {
    if (sourceIndex === undefined) return;
    let appended = false;
    if (!state.selection.has(sourceIndex)) {
      state.selection.add(sourceIndex);
      state.selectionOrder = [...state.selectionOrder, sourceIndex];
      appended = true;
    }
    state.selectionOrder = [
      sourceIndex,
      ...state.selectionOrder.filter(index => index !== sourceIndex)
    ];
    if (appended) {
      updateSelectionText();
      updateDeleteButtonVisibility();
      if (typeof window.bubble_fn_hasSelection === 'function') {
        window.bubble_fn_hasSelection(true);
      }
    }
    publishSelectedUniqueIds();
  }

  function handleDoubleClick(event) {
    if (!state.hot || !event.target) return;
    const cell = event.target.closest('td');
    if (!cell) return;

    let rowIndex = NaN;
    if (typeof state.hot.getCoords === 'function') {
      try {
        const coords = state.hot.getCoords(cell);
        if (coords && typeof coords.row === 'number') {
          rowIndex = coords.row;
        }
      } catch (err) {
        rowIndex = NaN;
      }
    }
    if (!Number.isInteger(rowIndex)) {
      const rowAttr = cell.getAttribute('data-row');
      rowIndex = rowAttr ? parseInt(rowAttr, 10) : NaN;
    }
    if (!Number.isInteger(rowIndex) || rowIndex < 0) return;

    const sourceIndex = state.displayRows[rowIndex]?.__sourceIndex;
    if (sourceIndex === undefined) return;

    prioritizeSelection(sourceIndex);
    start();
  }

  function attachDoubleClickListener() {
    if (!els.container || els.container.dataset.doubleClickAttached === 'true') return;
    els.container.addEventListener('dblclick', handleDoubleClick);
    els.container.dataset.doubleClickAttached = 'true';
  }

  function escapeHtml(value) {
    return String(value ?? '')
      .replace(/&/g, '&amp;')
      .replace(/</g, '&lt;')
      .replace(/>/g, '&gt;')
      .replace(/"/g, '&quot;')
      .replace(/'/g, '&#39;');
  }

  const typeMetaMap = {
    text: { iconKey: 'text', label: 'Text' },
    textarea: { iconKey: 'text', label: 'Textarea' },
    email: { iconKey: 'text', label: 'Email' },
    phone: { iconKey: 'text', label: 'Phone' },
    url: { iconKey: 'text', label: 'URL' },
    integer: { iconKey: 'hash', label: 'Integer' },
    number: { iconKey: 'hash', label: 'Number' },
    decimal: { iconKey: 'hash', label: 'Decimal' },
    currency: { iconKey: 'hash', label: 'Currency' },
    percent: { iconKey: 'hash', label: 'Percent' },
    boolean: { iconKey: 'check', label: 'Boolean' },
    dropdown: { iconKey: 'chevron', label: 'Dropdown' },
    date: { iconKey: 'calendar', label: 'Date' },
    time: { iconKey: 'clock', label: 'Time' },
    datetime: { iconKey: 'calendar', label: 'Datetime' },
    file: { iconKey: 'paperclip', label: 'File' },
    image: { iconKey: 'image', label: 'Image' },
    multifile: { iconKey: 'paperclip', label: 'Multi file' }
  };

  const iconKeyGlyphMap = {
    text: 'Aa',
    hash: '#',
    check: 'âœ“',
    chevron: 'â–¾',
    calendar: 'ðŸ—“',
    clock: 'ðŸ•’',
    paperclip: 'ðŸ“Ž',
    image: 'ðŸ–¼'
  };

  function normalizeColumnType(type) {
    const raw = String(type || 'text').trim().toLocaleLowerCase('tr-TR');
    if (!raw) return 'text';

    const normalized = raw
      .replace(/\s+/g, '_')
      .replace(/[()]/g, '')
      .replace(/&/g, '_')
      .replace(/\./g, '_')
      .replace(/-/g, '_');

    if (normalized === 'reference') return 'text';
    if (normalized === 'sys_cf' || normalized === 'sys' || normalized === 'action_cf' || normalized === 'action') return 'text';
    if (normalized === 'text_long' || normalized === 'multiline_text') return 'textarea';
    if (normalized === 'e_mail') return 'email';
    if (normalized === 'checkbox') return 'boolean';
    if (normalized === 'image_pdf' || normalized === 'imageandpdf' || normalized === 'imagepdf') return 'image';

    return typeMetaMap[normalized] ? normalized : 'text';
  }

  function getColumnTypeMeta(type) {
    const normalized = normalizeColumnType(type);
    return typeMetaMap[normalized] || typeMetaMap.text;
  }

  function renderColumnHeader(column) {
    const meta = getColumnTypeMeta(column?.type);
    const icon = iconKeyGlyphMap[meta.iconKey] || iconKeyGlyphMap.text;
    const title = escapeHtml(column?.header || 'Field');
    const typeLabel = escapeHtml(meta?.label || 'Text');
    return `<span class="dt-colheader-content"><span class="dt-header-label"><span class="dt-type-icon" aria-hidden="true" title="${typeLabel}">${icon}</span><span class="dt-header-text">${title}</span></span></span>`;
  }

  function getAdaptiveTableHeight() {
    if (!els.container) return 320;

    const containerHeight = Math.floor(els.container.clientHeight || 0);
    if (containerHeight > 0) {
      return Math.max(260, containerHeight);
    }

    const wrapperHeight = Math.floor(els.wrapper?.clientHeight || 0);
    const topHeight = Math.floor(els.wrapper?.querySelector('.dt-header')?.offsetHeight || 0);
    const fallbackHeight = wrapperHeight - topHeight - 14;

    return Math.max(260, fallbackHeight || 320);
  }


  async function mountHandsontable() {
    if (!els.container) {
      console.warn('Handsontable container missing');
      return;
    }

    try {
      await ensureHandsontableReady();
    } catch (error) {
      console.error('[DynamicTable] Handsontable baÅŸlatÄ±lamadÄ±.', error);
      return;
    }

    const visibleColumns = [...state.columns, getUiActionsColumn()];

    const settings = {
      data: state.displayRows,
      columns: visibleColumns.map(col => {
        if (col.__uiOnly) {
          return {
            data: UI_ACTIONS_COL_ID,
            readOnly: true,
            width: col.width,
            renderer: (instance, td) => {
              td.innerHTML = '';
            }
          };
        }

        const renderer = typeof getSafeRenderer === 'function' ? getSafeRenderer(col) : null;
        return {
          data: col.id,
          readOnly: col.readOnly,
          width: col.width,
          ...(renderer ? { renderer } : {})
        };
      }),
      cells: (row, col) => {
        const column = visibleColumns[col];
        if (!column || column.__uiOnly) return {};
        const colType = (column?.type || '').toLowerCase();
        const rowData = state.displayRows?.[row];
        const cellValue = rowData ? rowData[column?.id] : undefined;
        const isBool = isBooleanValue(cellValue);
        const meta = {};
        if (colType === 'boolean' || colType === 'checkbox' || isBool) {
          meta.type = 'checkbox';
        }
        return meta;
      },
      colHeaders: index => {
        const col = visibleColumns[index];
        if (col?.__uiOnly) {
          return '<span class="dt-colheader-content dt-colheader-content--actions"><span class="dt-colheader-actions"><button class="dt-header-action-btn" data-header-action="add" type="button" aria-label="Add field" title="Add field">+</button><button class="dt-header-action-btn dt-header-action-btn--manage" data-header-action="manage" type="button" aria-label="Manage field" title="Manage field"><svg class="dt-manage-dots" viewBox="0 0 24 24" aria-hidden="true"><circle cx="6" cy="12" r="1.9"></circle><circle cx="12" cy="12" r="1.9"></circle><circle cx="18" cy="12" r="1.9"></circle></svg></button></span></span>';
        }
        return renderColumnHeader(col);
      },
      rowHeaders: true,
      rowHeaderWidth: 44,
      height: getAdaptiveTableHeight(),
      width: '100%',
      manualColumnResize: true,
      manualColumnMove: false,
      manualRowMove: false,
      filters: true,
      dropdownMenu: false,
      columnSorting: {
        indicator: false,
        headerAction: false
      },
      selectionMode: 'multiple',
      licenseKey: 'non-commercial-and-evaluation',
      afterSelectionEnd: handleSelection,
      afterOnCellMouseDown: (event, coords, TD) => {
        if (!coords || coords.row !== -1 || coords.col < 0) return;
        if (coords.col >= state.columns.length) return;
        const target = event?.target;
        if (!target) return;
        if (target.closest('.dt-header-action-btn')) return;
        if (!target.closest('.colHeader') && !target.closest('.dt-header-label') && !target.closest('.dt-header-text') && !target.closest('.dt-type-icon') && !target.closest('.dt-colheader-content')) return;
        const headerLabel = state.columns[coords.col]?.header || '';
        openColumnMenu(coords.col, TD?.getBoundingClientRect?.() || target.getBoundingClientRect(), headerLabel);
      },
      afterFilter: () => {
        updateFooter();
        handleSelection();
      }
    };

    if (state.hot) {
      state.hot.updateSettings(settings);
    } else {
      state.hot = new Handsontable(els.container, settings);
    }

    updateFooter();
    attachDoubleClickListener();
    syncButtonTitles();
  }

  function loadDisplayRows(rows) {
    state.displayRows = rows;
    void mountHandsontable();
    updateFooter();
    state.selection.clear();
    state.selectionOrder = [];
    updateSelectionText();
    updateDeleteButtonVisibility();
    publishSelectedUniqueIds();
  }

  function applySearch(term) {
    if (!term) {
      loadDisplayRows(buildDisplayRows(state.rawRows));
      return;
    }

    const lowered = term.toLocaleLowerCase('tr-TR');
    const filtered = state.rawRows.filter(row => {
      return state.columns.some(col => {
        const value = pickValue(row, col);
        if (value === null || value === undefined) return false;
        return String(value).toLocaleLowerCase('tr-TR').includes(lowered);
      });
    });

    loadDisplayRows(buildDisplayRows(filtered));
  }

  function openSearch() {
    if (!els.searchWrap) return;
    els.searchWrap.classList.add('is-open');
    state.isSearchOpen = true;
    if (els.searchToggleButton) {
      els.searchToggleButton.setAttribute('aria-expanded', 'true');
    }
    if (els.search) {
      setTimeout(() => {
        try { els.search.focus(); } catch (err) {}
      }, 30);
    }
  }

  function closeSearch(clearValue) {
    if (!els.searchWrap) return;
    els.searchWrap.classList.remove('is-open');
    state.isSearchOpen = false;
    if (els.searchToggleButton) {
      els.searchToggleButton.setAttribute('aria-expanded', 'false');
    }
    if (clearValue && els.search && els.search.value) {
      els.search.value = '';
      applySearch('');
    }
  }

  function attachSearchListener() {
    if (!els.search || els.search.dataset.listenerAttached) return;
    els.search.addEventListener('input', event => {
      applySearch(event.target.value.trim());
    });

    els.search.addEventListener('keydown', event => {
      if (event.key === 'Escape') {
        event.preventDefault();
        closeSearch(true);
      }
    });

    document.addEventListener('click', event => {
      if (!state.isSearchOpen) return;
      const target = event.target;
      const insideWrap = !!target.closest('#dt-search-wrap');
      const searchToggleClicked = !!target.closest('#dt-btn-search');
      if (!insideWrap && !searchToggleClicked && !(els.search && els.search.value)) {
        closeSearch(false);
      }
    });

    els.search.dataset.listenerAttached = 'true';
  }

  function attachResizeListener() {
    if (!els.wrapper || els.wrapper.dataset.resizeAttached === 'true') return;

    const refreshHeight = () => {
      if (!state.hot) return;
      state.hot.updateSettings({ height: getAdaptiveTableHeight() });
    };

    window.addEventListener('resize', refreshHeight);

    if (typeof ResizeObserver === 'function' && els.container) {
      const observer = new ResizeObserver(refreshHeight);
      observer.observe(els.container);
      observer.observe(els.wrapper);
      els.wrapper.__dtResizeObserver = observer;
    }

    els.wrapper.dataset.resizeAttached = 'true';
  }

  function setTableData(data, columns) {
    log('setTableData', { rows: Array.isArray(data) ? data.length : 0, columns: Array.isArray(columns) ? columns.length : 0 });
    if (!Array.isArray(data) || !Array.isArray(columns) || columns.length === 0) {
      console.warn('setTableData: invalid data or columns');
      return;
    }

    state.rawRows = data.map((row, index) => normalizeRow(row, index));
    state.columns = sanitizeColumns(columns);
    loadDisplayRows(buildDisplayRows(state.rawRows));
    attachSearchListener();
    attachResizeListener();
  }

  function refreshTable(data) {
    if (!Array.isArray(data) || state.columns.length === 0) {
      console.warn('refreshTable: missing data or columns');
      return;
    }
    state.rawRows = data.map((row, index) => normalizeRow(row, index));
    loadDisplayRows(buildDisplayRows(state.rawRows));
  }

  function clearSelection() {
    state.selection.clear();
    state.selectionOrder = [];
    updateSelectionText();
    updateDeleteButtonVisibility();
    publishSelectedUniqueIds();
    if (state.hot) {
      try { state.hot.deselectCell(); } catch (err) {}
    }
    if (typeof window.bubble_fn_hasSelection === 'function') {
      window.bubble_fn_hasSelection(false);
    }
  }

  function autoInitialize() {
    try {
      const script = document.getElementById('bubble-table-config');
      if (!script) return;
      const config = JSON.parse(script.textContent || '{}');
      if (Array.isArray(config.data) && Array.isArray(config.columns)) {
        setTableData(config.data, config.columns);
      }
    } catch (error) {
      console.warn('Failed to parse bubble-table-config', error);
    }
  }

  function getSelectedUniqueIds() {
    const ids = [];
    const seen = new Set();
    state.selectionOrder.forEach(index => {
      if (!state.selection.has(index)) return;
      const raw = state.rawRows[index];
      if (!raw) return;
      for (const key of UNIQUE_KEYS) {
        if (raw[key] !== undefined && raw[key] !== null && raw[key] !== '') {
          const idValue = String(raw[key]);
          if (!seen.has(idValue)) {
            seen.add(idValue);
            ids.push(idValue);
          }
          return;
        }
      }
    });
    return ids;
  }

  function publishSelectedUniqueIds() {
    const ids = getSelectedUniqueIds();
    if (typeof window.bubble_fn_selected_unique_ids === 'function') {
      window.bubble_fn_selected_unique_ids(ids);
    }
    if (typeof window.bubble_fn_selected_count === 'function') {
      window.bubble_fn_selected_count(ids.length);
    }
    return ids;
  }

  function start() {
    const ids = getSelectedUniqueIds();
    if (typeof window.bubble_fn_start === 'function') {
      window.bubble_fn_start(ids);
    }
    return ids;
  }

  function edit() {
    const ids = getSelectedUniqueIds();
    if (typeof window.bubble_fn_edit === 'function') {
      window.bubble_fn_edit(ids);
    }
    return ids;
  }

  function save() {
    const ids = getSelectedUniqueIds();
    if (typeof window.bubble_fn_save === 'function') {
      window.bubble_fn_save(ids);
    }
    return ids;
  }

  function deleteSelected() {
    if (typeof window.bubble_fn_delete === 'function') {
      window.bubble_fn_delete();
    }
  }

  function create() {
    if (typeof window.bubble_fn_create === 'function') {
      window.bubble_fn_create();
    }
  }

  function importData() {
    if (typeof window.bubble_fn_import === 'function') {
      window.bubble_fn_import();
    }
  }

  function exportData() {
    if (typeof window.bubble_fn_export === 'function') {
      window.bubble_fn_export();
    }
  }

  function addField() {
    if (typeof window.bubble_fn_add_field === 'function') {
      window.bubble_fn_add_field();
    }
  }

  function manageField() {
    if (typeof window.bubble_fn_manage_field === 'function') {
      window.bubble_fn_manage_field();
    }
  }

  function syncButtonTitles() {
    if (!els.wrapper) return;
    const buttons = els.wrapper.querySelectorAll('button[aria-label]');
    buttons.forEach(btn => {
      if (!btn.getAttribute('title')) {
        btn.setAttribute('title', btn.getAttribute('aria-label'));
      }
    });
  }

  function closeColumnMenu() {
    if (!els.columnMenu) return;
    clearSubmenuCloseTimer();
    hideFilterPanel();
    hideSortPanel();
    els.columnMenu.classList.remove('is-open', 'is-filter-mode', 'is-sort-mode');
    els.columnMenu.setAttribute('aria-hidden', 'true');
    state.activeHeaderColumn = null;
  }

  function openColumnMenu(columnIndex, anchorRect, headerLabel) {
    if (!els.columnMenu || !els.wrapper || !Number.isInteger(columnIndex) || columnIndex < 0) return;

    state.activeHeaderColumn = columnIndex;
    state.columnMenuOpenedAt = Date.now();

    if (els.columnMenuTitle) {
      const safeTitle = headerLabel && String(headerLabel).trim() ? String(headerLabel) : `Field ${columnIndex + 1}`;
      els.columnMenuTitle.textContent = safeTitle;
    }

    const wrapperRect = els.wrapper.getBoundingClientRect();
    const left = Math.min(
      Math.max(anchorRect.left - wrapperRect.left, 6),
      Math.max(wrapperRect.width - 236, 6)
    );
    const top = Math.max(anchorRect.bottom - wrapperRect.top + 4, 6);

    els.columnMenu.style.left = `${left}px`;
    els.columnMenu.style.top = `${top}px`;
    hideFilterPanel();
    hideSortPanel();
    els.columnMenu.classList.remove('is-filter-mode', 'is-sort-mode');
    els.columnMenu.classList.add('is-open');
    els.columnMenu.setAttribute('aria-hidden', 'false');
  }



  function clearSubmenuCloseTimer() {
    if (!state.submenuCloseTimer) return;
    clearTimeout(state.submenuCloseTimer);
    state.submenuCloseTimer = null;
  }

  function hideAllSubmenus() {
    hideFilterPanel();
    hideSortPanel();
  }

  function scheduleSubmenuClose() {
    clearSubmenuCloseTimer();
    state.submenuCloseTimer = setTimeout(() => {
      hideAllSubmenus();
    }, 160);
  }

  function positionSubmenu(panelEl, triggerEl) {
    if (!panelEl || !els.columnMenu) return;
    const menuWidth = els.columnMenu.offsetWidth || 220;
    panelEl.style.left = `${menuWidth + 8}px`;
    const top = Math.max(0, (triggerEl?.offsetTop || 0) - 6);
    panelEl.style.top = `${top}px`;
  }

  function hideSortPanel() {
    if (els.sortPanel) {
      els.sortPanel.classList.remove('is-open');
    }
    if (els.columnMenu) {
      els.columnMenu.classList.remove('is-sort-mode');
    }
  }

  function openSortPanel() {
    hideFilterPanel();
    positionSubmenu(els.sortPanel, els.columnMenuSortButton);
    if (els.sortPanel) {
      els.sortPanel.classList.add('is-open');
    }
    if (els.columnMenu) {
      els.columnMenu.classList.add('is-sort-mode');
      els.columnMenu.classList.remove('is-filter-mode');
    }
  }

  function applyColumnSortOrder(columnIndex, sortOrder) {
    if (!state.hot || !Number.isInteger(columnIndex)) return;
    if (columnIndex >= state.columns.length) return;
    const sortingPlugin = typeof state.hot.getPlugin === 'function' ? state.hot.getPlugin('columnSorting') : null;
    if (!sortingPlugin) return;

    try {
      sortingPlugin.sort({ column: columnIndex, sortOrder });
    } catch (err) {
      console.warn('Sort apply failed', err);
    }
  }


  function hideFilterPanel() {
    if (els.filterPanel) {
      els.filterPanel.classList.remove('is-open');
    }
    if (els.columnMenu) {
      els.columnMenu.classList.remove('is-filter-mode');
    }
    state.filterDraft = null;
  }

  function getColumnDistinctValues(columnIndex) {
    const values = [];
    const seen = new Set();
    state.rawRows.forEach(row => {
      const value = pickValue(row, state.columns[columnIndex]);
      const isBlank = value === null || value === undefined || value === '';
      const raw = isBlank ? BLANK_VALUE_TOKEN : String(value);
      if (seen.has(raw)) return;
      seen.add(raw);
      values.push({
        raw,
        label: isBlank ? '(Blank cells)' : String(value)
      });
    });
    return values.sort((a, b) => a.label.localeCompare(b.label, 'tr'));
  }

  function renderFilterValueList() {
    if (!els.filterValuesWrap || !state.filterDraft) return;
    const term = String(els.filterSearchInput?.value || '').toLocaleLowerCase('tr-TR');
    const filtered = state.filterDraft.allValues.filter(item => item.label.toLocaleLowerCase('tr-TR').includes(term));
    els.filterValuesWrap.innerHTML = filtered.map(item => {
      const checked = state.filterDraft.selectedValues.has(item.raw) ? 'checked' : '';
      const safeLabel = escapeHtml(item.label);
      const safeRaw = escapeHtml(item.raw);
      return `<label class="dt-filter-value-item"><input type="checkbox" class="dt-filter-value-checkbox" data-value="${safeRaw}" ${checked} /><span>${safeLabel}</span></label>`;
    }).join('');
  }

  function conditionNeedsValue(condition) {
    return condition !== 'none' && condition !== 'empty' && condition !== 'not_empty';
  }

  function syncFilterPanelVisibility() {
    if (!state.filterDraft) return;

    const hasPrimaryCondition = state.filterDraft.condition !== 'none';
    const showPrimaryValue = conditionNeedsValue(state.filterDraft.condition);
    const showSecondarySelect = hasPrimaryCondition;
    const showSecondaryValue = hasPrimaryCondition && conditionNeedsValue(state.filterDraft.condition2 || 'none');

    if (els.filterConditionValueInput) {
      els.filterConditionValueInput.style.display = showPrimaryValue ? '' : 'none';
      els.filterConditionValueInput.disabled = !showPrimaryValue;
    }

    if (els.filterOperatorRow) {
      els.filterOperatorRow.style.display = showSecondarySelect ? 'flex' : 'none';
    }

    if (els.filterConditionSelect2) {
      els.filterConditionSelect2.style.display = showSecondarySelect ? '' : 'none';
    }

    if (els.filterConditionValueInput2) {
      els.filterConditionValueInput2.style.display = showSecondaryValue ? '' : 'none';
      els.filterConditionValueInput2.disabled = !showSecondaryValue;
    }

    if (!hasPrimaryCondition) {
      state.filterDraft.operator = 'and';
      state.filterDraft.condition2 = 'none';
      state.filterDraft.valueTerm2 = '';
      if (els.filterOperatorAnd) els.filterOperatorAnd.checked = true;
      if (els.filterOperatorOr) els.filterOperatorOr.checked = false;
      if (els.filterConditionSelect2) els.filterConditionSelect2.value = 'none';
      if (els.filterConditionValueInput2) els.filterConditionValueInput2.value = '';
    }
  }

  function openFilterPanel(columnIndex) {
    if (!Number.isInteger(columnIndex) || columnIndex < 0) return;
    const existing = state.filterConfigs[columnIndex] || { condition: 'none', condition2: 'none', operator: 'and', values: null };
    const allValues = getColumnDistinctValues(columnIndex);
    const allRawValues = allValues.map(item => item.raw);
    const selectedValues = new Set(Array.isArray(existing.values) && existing.values.length ? existing.values : allRawValues);
    state.filterDraft = {
      columnIndex,
      condition: existing.condition || 'none',
      valueTerm: existing.valueTerm || '',
      condition2: existing.condition2 || 'none',
      valueTerm2: existing.valueTerm2 || '',
      operator: existing.operator || 'and',
      allValues,
      selectedValues
    };

    if (els.filterConditionSelect) {
      els.filterConditionSelect.value = state.filterDraft.condition;
    }
    if (els.filterConditionValueInput) {
      const disabled = !conditionNeedsValue(state.filterDraft.condition);
      els.filterConditionValueInput.disabled = disabled;
      els.filterConditionValueInput.value = state.filterDraft.valueTerm || '';
    }
    if (els.filterOperatorAnd) {
      els.filterOperatorAnd.checked = state.filterDraft.operator !== 'or';
    }
    if (els.filterOperatorOr) {
      els.filterOperatorOr.checked = state.filterDraft.operator === 'or';
    }
    if (els.filterConditionSelect2) {
      els.filterConditionSelect2.value = state.filterDraft.condition2 || 'none';
    }
    if (els.filterConditionValueInput2) {
      const disabled2 = !conditionNeedsValue(state.filterDraft.condition2 || 'none');
      els.filterConditionValueInput2.disabled = disabled2;
      els.filterConditionValueInput2.value = state.filterDraft.valueTerm2 || '';
    }
    if (els.filterSearchInput) {
      els.filterSearchInput.value = '';
    }
    syncFilterPanelVisibility();
    renderFilterValueList();
    hideSortPanel();
    positionSubmenu(els.filterPanel, els.columnMenuFilterButton);
    if (els.filterPanel) {
      els.filterPanel.classList.add('is-open');
    }
    if (els.columnMenu) {
      els.columnMenu.classList.add('is-filter-mode');
      els.columnMenu.classList.remove('is-sort-mode');
    }
  }

  function applyAllColumnFilters() {
    if (!state.hot || typeof state.hot.getPlugin !== 'function') return;
    const filterPlugin = state.hot.getPlugin('filters');
    if (!filterPlugin) return;

    try {
      for (let colIndex = 0; colIndex < state.columns.length; colIndex += 1) {
        filterPlugin.removeConditions(colIndex);
      }

      Object.keys(state.filterConfigs).forEach(key => {
        const col = Number(key);
        const config = state.filterConfigs[key];
        if (!Number.isInteger(col) || !config) return;

        if (config.condition && config.condition !== 'none') {
          if (config.condition === 'empty' || config.condition === 'not_empty') {
            filterPlugin.addCondition(col, config.condition, []);
          } else {
            filterPlugin.addCondition(col, config.condition, [config.valueTerm || '']);
          }
        }

        if (config.condition2 && config.condition2 !== 'none') {
          const op = config.operator === 'or' ? 'disjunction' : 'conjunction';
          if (config.condition2 === 'empty' || config.condition2 === 'not_empty') {
            filterPlugin.addCondition(col, config.condition2, [], op);
          } else {
            filterPlugin.addCondition(col, config.condition2, [config.valueTerm2 || ''], op);
          }
        }

        if (Array.isArray(config.values) && config.values.length) {
          const normalizedValues = config.values.map(value => value === BLANK_VALUE_TOKEN ? '' : value);
          filterPlugin.addCondition(col, 'by_value', [normalizedValues]);
        }
      });

      filterPlugin.filter();
    } catch (err) {
      console.warn('Filter apply failed', err);
    }
  }


  function applyColumnFilter(columnIndex) {
    openFilterPanel(columnIndex);
  }

  function cycleColumnSort(columnIndex) {
    if (!state.hot || !Number.isInteger(columnIndex)) return;
    if (columnIndex >= state.columns.length) return;
    const sortingPlugin = typeof state.hot.getPlugin === 'function' ? state.hot.getPlugin('columnSorting') : null;
    if (!sortingPlugin) return;

    const current = typeof sortingPlugin.getSortConfig === 'function' ? sortingPlugin.getSortConfig() : null;
    let nextOrder = 'asc';

    if (current && !Array.isArray(current) && current.column === columnIndex) {
      if (current.sortOrder === 'asc') {
        nextOrder = 'desc';
      } else if (current.sortOrder === 'desc') {
        nextOrder = '';
      }
    }

    try {
      if (!nextOrder) {
        if (typeof sortingPlugin.clearSort === 'function') sortingPlugin.clearSort();
      } else {
        sortingPlugin.sort({ column: columnIndex, sortOrder: nextOrder });
      }
    } catch (err) {
      console.warn('Sort apply failed', err);
    }
  }


  function attachActionButtons() {
    if (els.newButton) {
      els.newButton.addEventListener('click', create);
    }

    if (els.searchToggleButton) {
      els.searchToggleButton.addEventListener('click', () => {
        if (state.isSearchOpen) {
          closeSearch(!els.search?.value);
        } else {
          openSearch();
        }
      });
    }

    if (els.deleteButton) {
      els.deleteButton.addEventListener('click', deleteSelected);
    }

    if (els.importButton) {
      els.importButton.addEventListener('click', importData);
    }

    if (els.downloadButton) {
      els.downloadButton.addEventListener('click', exportData);
    }


    if (els.container) {
      els.container.addEventListener('click', event => {
        const actionBtn = event.target.closest('.dt-header-action-btn');
        if (!actionBtn) return;
        event.preventDefault();
        event.stopPropagation();
        const action = actionBtn.getAttribute('data-header-action');
        if (action === 'add') {
          addField();
        } else if (action === 'manage') {
          manageField();
        }
      }, true);
    }

    if (els.sortButton) {
      els.sortButton.addEventListener('click', () => {
        if (typeof state.hot?.getPlugin === 'function') {
          const plugin = state.hot.getPlugin('columnSorting');
          if (plugin && typeof plugin.clearSort === 'function') {
            plugin.clearSort();
          }
        }
      });
    }

    if (els.columnMenuAddButton) {
      els.columnMenuAddButton.addEventListener('click', () => {
        addField();
        closeColumnMenu();
      });
    }

    if (els.columnMenuManageButton) {
      els.columnMenuManageButton.addEventListener('click', () => {
        manageField();
        closeColumnMenu();
      });
    }

    if (els.columnMenuFilterButton) {
      const openFilterFromMenu = () => {
        if (Number.isInteger(state.activeHeaderColumn)) {
          applyColumnFilter(state.activeHeaderColumn);
        }
      };
      els.columnMenuFilterButton.addEventListener('click', openFilterFromMenu);
      els.columnMenuFilterButton.addEventListener('mouseenter', openFilterFromMenu);
    }

    if (els.columnMenuSortButton) {
      const openSortFromMenu = () => {
        if (!Number.isInteger(state.activeHeaderColumn)) return;
        openSortPanel();
      };
      els.columnMenuSortButton.addEventListener('click', openSortFromMenu);
      els.columnMenuSortButton.addEventListener('mouseenter', openSortFromMenu);
    }

    if (els.sortAscButton) {
      els.sortAscButton.addEventListener('click', () => {
        if (!Number.isInteger(state.activeHeaderColumn)) return;
        applyColumnSortOrder(state.activeHeaderColumn, 'asc');
        closeColumnMenu();
      });
    }

    if (els.sortDescButton) {
      els.sortDescButton.addEventListener('click', () => {
        if (!Number.isInteger(state.activeHeaderColumn)) return;
        applyColumnSortOrder(state.activeHeaderColumn, 'desc');
        closeColumnMenu();
      });
    }

    if (els.columnMenu) {
      els.columnMenu.addEventListener('mouseenter', () => {
        clearSubmenuCloseTimer();
      });

      els.columnMenu.addEventListener('mouseleave', event => {
        const next = event.relatedTarget;
        const movingToSubmenu = !!(next && (next.closest('#dt-filter-panel') || next.closest('#dt-sort-panel')));
        if (!movingToSubmenu) {
          scheduleSubmenuClose();
        }
      });

      els.columnMenu.addEventListener('mouseover', event => {
        const item = event.target.closest('.dt-column-menu-item');
        if (!item) return;
        if (item.id === 'dt-column-menu-filter' || item.id === 'dt-column-menu-sort') return;
        hideAllSubmenus();
      });
    }

    if (els.filterPanel) {
      els.filterPanel.addEventListener('mouseenter', () => {
        clearSubmenuCloseTimer();
      });
      els.filterPanel.addEventListener('mouseleave', event => {
        const next = event.relatedTarget;
        const movingToMenu = !!(next && next.closest('#dt-column-menu'));
        if (!movingToMenu) {
          scheduleSubmenuClose();
        }
      });
    }

    if (els.sortPanel) {
      els.sortPanel.addEventListener('mouseenter', () => {
        clearSubmenuCloseTimer();
      });
      els.sortPanel.addEventListener('mouseleave', event => {
        const next = event.relatedTarget;
        const movingToMenu = !!(next && next.closest('#dt-column-menu'));
        if (!movingToMenu) {
          scheduleSubmenuClose();
        }
      });
    }

    if (els.filterSearchInput) {
      els.filterSearchInput.addEventListener('input', renderFilterValueList);
    }

    if (els.filterConditionSelect) {
      els.filterConditionSelect.addEventListener('change', event => {
        if (!state.filterDraft) return;
        state.filterDraft.condition = event.target.value || 'none';
        if (!conditionNeedsValue(state.filterDraft.condition)) {
          state.filterDraft.valueTerm = '';
          if (els.filterConditionValueInput) {
            els.filterConditionValueInput.value = '';
          }
        }
        syncFilterPanelVisibility();
      });
    }

    if (els.filterConditionValueInput) {
      els.filterConditionValueInput.addEventListener('input', event => {
        if (!state.filterDraft) return;
        state.filterDraft.valueTerm = event.target.value || '';
      });
    }

    if (els.filterConditionSelect2) {
      els.filterConditionSelect2.addEventListener('change', event => {
        if (!state.filterDraft) return;
        state.filterDraft.condition2 = event.target.value || 'none';
        if (!conditionNeedsValue(state.filterDraft.condition2 || 'none')) {
          state.filterDraft.valueTerm2 = '';
          if (els.filterConditionValueInput2) {
            els.filterConditionValueInput2.value = '';
          }
        }
        syncFilterPanelVisibility();
      });
    }

    if (els.filterConditionValueInput2) {
      els.filterConditionValueInput2.addEventListener('input', event => {
        if (!state.filterDraft) return;
        state.filterDraft.valueTerm2 = event.target.value || '';
      });
    }

    if (els.filterOperatorAnd) {
      els.filterOperatorAnd.addEventListener('change', event => {
        if (!state.filterDraft || !event.target.checked) return;
        state.filterDraft.operator = 'and';
      });
    }

    if (els.filterOperatorOr) {
      els.filterOperatorOr.addEventListener('change', event => {
        if (!state.filterDraft || !event.target.checked) return;
        state.filterDraft.operator = 'or';
      });
    }

    if (els.filterValuesWrap) {
      els.filterValuesWrap.addEventListener('change', event => {
        const checkbox = event.target.closest('.dt-filter-value-checkbox');
        if (!checkbox || !state.filterDraft) return;
        const value = checkbox.getAttribute('data-value') || '';
        if (checkbox.checked) {
          state.filterDraft.selectedValues.add(value);
        } else {
          state.filterDraft.selectedValues.delete(value);
        }
      });
    }

    if (els.filterSelectAllButton) {
      els.filterSelectAllButton.addEventListener('click', () => {
        if (!state.filterDraft) return;
        state.filterDraft.selectedValues = new Set(state.filterDraft.allValues.map(item => item.raw));
        renderFilterValueList();
      });
    }

    if (els.filterClearButton) {
      els.filterClearButton.addEventListener('click', () => {
        if (!state.filterDraft) return;
        state.filterDraft.selectedValues.clear();
        renderFilterValueList();
      });
    }

    if (els.filterCancelButton) {
      els.filterCancelButton.addEventListener('click', () => {
        hideFilterPanel();
      });
    }

    if (els.filterOkButton) {
      els.filterOkButton.addEventListener('click', () => {
        if (!state.filterDraft) return;
        const { columnIndex, condition, selectedValues, allValues } = state.filterDraft;
        const normalizedValues = Array.from(selectedValues);
        state.filterConfigs[columnIndex] = {
          condition: condition || 'none',
          valueTerm: (state.filterDraft.valueTerm || '').trim(),
          condition2: state.filterDraft.condition2 || 'none',
          valueTerm2: (state.filterDraft.valueTerm2 || '').trim(),
          operator: state.filterDraft.operator || 'and',
          values: normalizedValues.length === allValues.length ? null : normalizedValues
        };
        applyAllColumnFilters();
        closeColumnMenu();
      });
    }

    document.addEventListener('click', event => {
      if (!els.columnMenu?.classList.contains('is-open')) return;
      if (event.target.closest('#dt-column-menu')) return;
      if (Date.now() - (state.columnMenuOpenedAt || 0) < 220) return;
      closeColumnMenu();
    });

    if (els.columnMenu) {
      els.columnMenu.addEventListener('mousedown', event => event.stopPropagation());
      els.columnMenu.addEventListener('click', event => event.stopPropagation());
    }

    window.addEventListener('resize', () => {
      closeColumnMenu();
    });

  }


  window.dynamicTable = {
    setTableData,
    refreshTable,
    clearSelection,
    getSelectedUniqueIds,
    publishSelectedUniqueIds,
    start,
    edit,
    save,
    create,
    import: importData,
    export: exportData,
    addField,
    manageField,
    delete: deleteSelected
  };

  window.setTableData = setTableData;
  window.refreshTable = refreshTable;
  window.clearSelection = clearSelection;
  window.getSelectedUniqueIds = getSelectedUniqueIds;
  window.publishSelectedUniqueIds = publishSelectedUniqueIds;
  window.start = start;
  window.edit = edit;
  window.save = save;
  window.create = create;
  window.importData = importData;
  window.exportData = exportData;
  window.addField = addField;
  window.manageField = manageField;
  window.deleteSelected = deleteSelected;

  attachActionButtons();
  updateDeleteButtonVisibility();
  syncButtonTitles();
  void ensureHandsontableReady();
  autoInitialize();
})();
</script>
