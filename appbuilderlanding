        final_title: "โ Hazฤฑr mฤฑsฤฑn?",
        final_desc: "Bir haftada รงalฤฑลan AI รผrรผnรผnรผ birlikte รงฤฑkaralฤฑm.",
        final_cta_primary: "WhatsAppโtan Yaz",
        final_cta_secondary: "Fiyatlarฤฑ ฤฐncele",
        footer_text: "ยฉ 2026 GAIA Platform โ Built on our own infrastructure.",
        sticky_aria: "Hฤฑzlฤฑ iletiลim",
        sticky_title: "GAIA โข 7 gรผnde teslim",
        sticky_sub: "WhatsAppโtan baลla",
        sticky_cta: "Yaz"
      }
    };

    const langFlags = {
      ar: "sa",
      en: "gb",
      tr: "tr"
    };

    const updateLangFlag = (lang) => {
      const flag = langFlags[lang] || "sa";
      const flagImg = document.querySelector("[data-lang-flag]");
      if (!flagImg) return;
      flagImg.src = `https://flagcdn.com/w20/${flag}.png`;
      flagImg.srcset = `https://flagcdn.com/w40/${flag}.png 2x`;
      flagImg.alt = "";
    };

    const applyTranslations = (lang) => {
      const strings = translations[lang] || translations.ar;
      document.querySelectorAll("[data-i18n]").forEach((el) => {
        const key = el.dataset.i18n;
        if (strings[key]) el.textContent = strings[key];
      });
      document.querySelectorAll("[data-i18n-html]").forEach((el) => {
        const key = el.dataset.i18nHtml;
        if (strings[key]) el.innerHTML = strings[key];
      });
      document.querySelectorAll("[data-i18n-aria-label]").forEach((el) => {
        const key = el.dataset.i18nAriaLabel;
        if (strings[key]) el.setAttribute("aria-label", strings[key]);
      });
      const isRtl = lang === "ar";
      document.documentElement.lang = lang;
      document.documentElement.dir = isRtl ? "rtl" : "ltr";
      document.body.classList.toggle("rtl", isRtl);
      updateLangFlag(lang);
    };

    const langSelect = document.getElementById("lang-select");
    const defaultLang = "ar";
    langSelect.value = defaultLang;
    applyTranslations(defaultLang);
    langSelect.addEventListener("change", (e) => {
      applyTranslations(e.target.value);
    });

    // Simple reveal on scroll (respects reduced motion in CSS)
    const els = Array.from(document.querySelectorAll(".reveal"));
    const io = new IntersectionObserver((entries) => {
      for (const e of entries) if (e.isIntersecting) e.target.classList.add("show");
    }, { threshold: 0.12 });
    els.forEach(el => io.observe(el));

    // FAQ summary "+" toggle
    document.querySelectorAll(".faq details").forEach(d => {
      const s = d.querySelector("summary span[aria-hidden='true']");
      d.addEventListener("toggle", () => { if (s) s.textContent = d.open ? "โ" : "+"; });
    });
  </script>
</body>
</html>
