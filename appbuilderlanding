  <script>
    // Simple reveal on scroll (respects reduced motion in CSS)
    const els = Array.from(document.querySelectorAll(".reveal"));
    const io = new IntersectionObserver((entries) => {
      for (const e of entries) if (e.isIntersecting) e.target.classList.add("show");
    }, { threshold: 0.12 });
    els.forEach(el => io.observe(el));

    // FAQ summary "+" toggle
    document.querySelectorAll(".faq details").forEach(d => {
      const s = d.querySelector("summary span");
      d.addEventListener("toggle", () => { if (s) s.textContent = d.open ? "‚Äì" : "+"; });
    });
  </script>
</body>
</html>
